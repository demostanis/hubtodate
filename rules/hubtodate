; A rule to install HubToDate itself

[repository]
owner = demostanis
name = hubtodate

[release]
match = hubtodate.tar.gz
unpack = tar xzf <archive>
install = zef install --/test --force . && \
  mv -f hubtodate /usr/bin
root = yes

[verification]
sha256sums = sha256sums.txt
gpgkey = CA6BE13227DFDCDE248EA199A6AF79102D10A5DC
          ; demostanis worlds <demostanis@protonmail.com>
